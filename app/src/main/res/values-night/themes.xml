<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ListaDeTarefas" parent="Theme.Material3.DayNight">
        <!-- Customizando o tema. -->

        <item name="colorPrimary">@color/primaria</item>
        <item name="colorPrimaryVariant">@color/primaria_varicao</item>

        <item name="colorSecondary">@color/secundaria</item>
        <item name="colorSecondaryVariant">@color/secundaria_variacao</item>

        <item name="android:windowBackground">@color/fundo</item>

        <!-- Cor da ActionBar -->
        <item name="actionBarStyle">@style/MyActionBar</item>

        <!-- Cor da barra de status -->
        <item name="android:statusBarColor">@color/primaria</item>

        <!-- Configurar barra de status -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.ListaDeTarefas" parent="Base.Theme.ListaDeTarefas" />

    <!-- Customizando a ActionBar -->
    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/primaria</item>
    </style>
</resources>
